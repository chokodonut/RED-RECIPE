<div class="container">
  <div class="row my-2">
    <h3><%= @recipe.title %></h3>
  </div>
  <div class="row">
    <div class="col-6">
      <%= image_tag @recipe.get_image(450,300) %>
    </div>
    <div class="col-6">
      <div class="p-2 bg-light border">
        <%= @recipe.description %>
        <p class="mt-3"><i class="far fa-clock"></i><%= @recipe.time %>分</p>
        <p  style="color: #DC3543;">辛さレベル<%= @recipe.hot_level %></p>
        <p  class="text-right text-secondary">by <%= @recipe.user.name %></p>
      </div>
    </div>
  </div>
  <table class="table">
    <tr>
      <th>材料</th>
      <th>分量</th>
    </tr>
    <tr>
      <% @recipe.materials.each do |recipe| %>
      <td>
        <%= recipe.name %>
      </td>
      <td>
        <%= recipe.quantity %>
      </td>
    </tr>
    <% end %>
  </table>
  <h3>作り方</h3>
  <table class="table">
    <% @recipe.steps.each do |recipe| %>
    <tr>
      <th>
        <%= recipe.step_no %>
      </th>
      <th>
        <%= recipe.content %>
      </th>
      <% recipe.images.each do |image| %>
      <th>
        <%= image_tag image, size:"200x200" %>
      </th>
    </tr>
      <% end %>
    <% end %>
  </table>

</div>
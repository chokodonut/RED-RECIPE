<div class="container">
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-6 mx-auto mt-5">
      <h3>ジャンル入力</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto mt-5">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :ジャンル名 %> ※必須入力
        <%= f.text_field :name, class: "form-control border-danger" %>
      <div class="col-2 mt-5">
        <%= f.submit '投稿', class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
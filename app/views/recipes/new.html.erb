<div class="container">
  <div class="container mt-5">
    <div class="row">
      <div class="col-10 mx-auto">
        <h2>投稿ページ</h2>
        <% if @recipe.errors.any? %>
          <%= @recipe.errors.count %>件のエラーが発生しました
          <ul>
            <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= render "form", recipe: @recipe %>
      </div>
    </div>
  </div>
</div>
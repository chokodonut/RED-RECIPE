<div class="container">
  <%= flash[:notice] %>
  <div class="row my-2">
    <h3><%= @recipe.title %></h3>
  </div>
  <div class="row">
    <div class="col-6">
      <%= image_tag @recipe.get_image(450,300) %>
    </div>
    <div class="col-6">
      <h3>レシピについて</h3>
      <%= @recipe.description %>
      <p>所要時間<%= @recipe.time %>分</p>
      <p>辛さレベル<%= @recipe.hot_level %></p>
      <p>by<%= @recipe.user.name %></p>
    </div>
  </div>

  <% if @recipe.user_id == current_user.id %>
    <div class="row">
      <div class="col-3 my-2">
        <%= link_to 'レシピ編集', edit_recipe_path(@recipe.id), class: "btn btn-outline-success" %>
      </div>
  <% end %>
      <div class="col-3 my-2">
        <%= link_to 'プロフィールへ', user_path(@recipe.user.id), class: "btn btn-outline-primary" %>
      </div>

  <% if current_user.already_book_mark?(@recipe) %>
    <% if @recipe.user.name == "ゲスト" %>
      <div class="col-3 my-2">
        <%= link_to recipe_book_marks_path(@recipe), method: :delete do %>
          ブックマーク<i class="far fa-bookmark"></i>
        <% end %>
        <%= @recipe.book_marks.count %>
      </div>
    <% else %>
      <div class="col-3 my-2">
        <%= link_to recipe_book_marks_path(@recipe), method: :post do %>
          ブックマーク<i class="far fa-bookmark"></i>
        <% end %>
        <%= @recipe.book_marks.count %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
<div class="container">
  <table class="table">
    <tr>
      <th>材料</th>
      <th>分量</th>
    </tr>
    <tr>
      <% @recipe.materials.each do |recipe| %>
      <td>
        <%= recipe.name %>
      </td>
      <td>
        <%= recipe.quantity %>
      </td>
    </tr>
    <% end %>
  </table>
  <h3>作り方</h3>
  <table class="table">
    <% @recipe.steps.each do |recipe| %>
      <tr>
        <th>
          <%= recipe.step_no %>
        </th>
        <th>
          <%= recipe.content %>
        </th>
        <% recipe.images.each do |image| %>
        <th>
          <%= image_tag image, size:"150x150" %>
        </th>
      </tr>
      <% end %>
    <% end %>
  </table>
  <% if @recipe.user.name == "ゲスト" %>
    <%= link_to 'つくれぽを投稿', new_recipe_report_path(@recipe) %>
  <% end %>
  <%= link_to  recipe_reports_path(@recipe) do %>
    <p>つくれぽ:<%= @recipe.reports.count %></p>
  <% end %>
</div>
<%= form_with url: search_path, local: true, method: :get do |f| %>
  <div class="input-group">
    <%= f.select :range, options_for_select([['User'], ['Recipe']]), class: "border border-danger mx-2" %>
  <div class="rounded-3">
    <%= f.text_field :keyword, placeholder: 'キーワード検索', class: "form-control mx-2", style: "border-color: #DC3543;" %>
  </div>
    <%= f.submit "検索", class: "btn btn-outline-warning mx-3" do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
<% end %>
<%= link_to recipes_path, class: "btn btn-outline-warning" do %>
  <i class="fab fa-hotjar"></i>レシピ一覧
<% end %>
<%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-warning" do %>
  <i class="fas fa-sign-out-alt"></i>ログアウト
<% end %>
<%= link_to my_page_path, class: "btn btn-outline-warning" do %>
  <i class="fas fa-user-circle"></i>マイページ
<% end %>

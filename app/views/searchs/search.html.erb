<div class="container">
  <% if @range == "Recipe" %>
    <h2>検索結果 "<%= @keyword %>"</h2>
      <div class="row">
        <% @recipes.each do |recipe| %>
          <div class="card-deck">
            <div class="card m-5 border-danger", style="width: 18rem;">
              <div class="card-body">
                <div class="card-img-top">
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= image_tag recipe.get_image(200,200) %>
                  <% end %>
                </div>
                <h5 class="card-title"><%= recipe.title %></h5>
                <p class="card-text mb-0", style="color: #DC3543;">辛さレベル<%= recipe.hot_level %></p>
                <p class="card-text"><%= truncate(recipe.description, length: 30) %></p>
                <%= link_to  recipe_reports_path(recipe.id), class: "text-secondary mb-0" do %>
                  <p class="card-text">つくれぽ:<%= recipe.reports.count %></p>
                <% end %>
                <p class="card-text text-right text-secondary">by <%= recipe.user.name %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

  <% else %>
  <h2>検索結果 "<%= @keyword %>"</h2>
    <table class="table">
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.user_image(200,200) %>
            <% end %>
            <%= user.name %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
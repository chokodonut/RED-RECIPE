<%= render "user", user: current_user%>

<div class="container">
  <h3>ブックマークしたレシピ</h3>
  <div class="row">
    <% if @book_marks_recipe.present? %>
      <% @book_marks_recipe.each do |recipe| %>
        <div class="card-deck">
          <div class="card m-4">
            <div class="card-body">
              <div class="card-img-top">
                <%= link_to recipe_path(recipe.id) do %>
                  <%= image_tag recipe.get_image(200,200) %>
                <% end %>
                <h5 class="card-title"><%= recipe.title %></h5>
                <p class="card-text"><%= recipe.description %></p>
                <p class="card-text">by <%= recipe.user.name %></p>
              </div>
            </div>
          </div>
      <% end %>
    <% else %>
      <p>お気に入りしたアイテムはありません</p>
    <% end %>
  </div>
</div>
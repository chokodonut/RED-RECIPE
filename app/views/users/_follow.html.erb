
<table class="table text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% user.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <% if user != current_user %>
            <% if user.is_followed_by?(current_user) %>
              <%=link_to user_relationships_path(user), method: :delete do %>
                <button type="button" class="btn btn btn-outline-danger">フォロー解除</button>
              <% end %>
            <% else %>
              <%=link_to user_relationships_path(user), method: :post do %>
                <button type="button" class="btn btn btn-outline-primary">フォロー</button>
              <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

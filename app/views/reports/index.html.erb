<div class="container mt-5">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col-6 mx-auto">
      <h3>みんなのレポ</h3>
      <table class="table">
        <% @report.each do |report| %>
          <tr>
            <td>
              <%= image_tag report.get_image(150,150) %>
              <%= report.content %>
              by <%= report.user.name %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>